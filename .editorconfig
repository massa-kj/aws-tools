# EditorConfig for shell scripts in aws-tools

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{sh,bash}]
indent_style = space
indent_size = 2
# shfmt formatting options
binary_next_line = true  # = -bn
space_redirects = false  # = -sr
simplify = true          # = -s
case_indent = true       # = -ci

[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

[*.{yml,yaml}]
indent_style = space
indent_size = 2

[*.json]
indent_style = space
indent_size = 2
